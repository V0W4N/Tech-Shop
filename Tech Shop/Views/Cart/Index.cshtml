@model IEnumerable<Tech_Shop.Models.CartItem>

@{
    ViewBag.Title = "Your Cart";
}

<h2>Your Cart</h2>

<div class="container">
    <div class="row">
        <div class="col-md-9">
                <table class="table cart-table">
                    <thead>
                        <tr>
                            <th style=" width: 35%;">Product</th>
                            <th>Quantity</th>
                            <th style=" width: 25%;">Calculated Price</th>
                            <th style=" width: 5%;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Device.DeviceName</td>
                                <td>
                                    @using (Html.BeginForm("UpdateCart", "Cart", FormMethod.Post))
                                    {
                                        @Html.Hidden("deviceId", item.DeviceId)
                                        <input type="number" name="quantity" value="@item.Quantity" class="form-control" style="display: inline-block; width: 40%;" />
                                        <button type="submit" class="btn btn-primary">Set</button>
                                    }
                                </td>
                                <td>
                                    <div class="price-wrap h5 d-flex flex-column m-0">
                                        <span class="price-new"><b>@(item.Device.Price*item.Quantity)</b> lei</span>
                                    </div>
                                    
                                </td>
                                <td>
                                    @using (Html.BeginForm("DeleteFromCart", "Cart", FormMethod.Post))
                                    {
                                        @Html.Hidden("deviceId", item.DeviceId)
                                        <button type="submit" class="btn btn-danger">Remove</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
        </div>
        <div class="col-md-3 offset-md-1">
            <div class="total">
                <div style="margin-bottom: 5%">
                    <h4>Total</h4>
                    <div class="price-wrap h5 d-flex flex-column m-0">
                        <span class="price-new"><b>@Model.Sum(i => (i.Quantity * i.Device.Price))</b> lei</span>
                    </div>
                </div>
                @using (Html.BeginForm("ConfirmPurchase", "Cart", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to confirm the purchase?');">Confirm Purchase</button>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .cart-table {
        width: 100%;
        vertical-align: middle;
    }

    .total {
        margin-top: 20px; /* Adjust as needed */
    }
</style>
