@model Tech_Shop.ViewModels.DeviceCategoryView

@{
    ViewBag.Title = "Create Device";
}

<h2 style="margin-top: 2%">Create Device</h2>
@using (Html.BeginForm("CreateWithCategory", "Products", FormMethod.Post, new { @class = "share-button" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            Выбор категории
            <div class="col-md-10">
                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-top: 10px; margin-left: 20px" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
