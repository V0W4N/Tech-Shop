@model IEnumerable<Tech_Shop.Models.Order>
@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.UserId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.TotalAmount</td>
                    <!-- Add more cells with order details as needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}
